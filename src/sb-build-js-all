#!/usr/bin/env node
var path = require('path');
var config = require('./utils/get-config')();
var GetPath = require('./utils/get-path');
var RunCommand = require('./utils/run-command');
var path = require('path');

var program = require('commander')
  .version(config.sbVersion)
  .option('-w, --watch', 'incrementally rebuild')
  .parse(process.argv);


console.log('sb-build-js-npm')
RunCommand('exec', GetPath('sb-build-js-npm'), function(code, stderr, stdout) {

  console.log('sb-build-js-bundles')
  RunCommand('exec', GetPath('sb-build-js-bundles'));
});

console.log('sb-build-js-browser')
RunCommand('exec', GetPath('sb-build-js-browser'), {async: true});

